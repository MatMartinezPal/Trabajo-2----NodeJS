        <table id = "tabla_cursos">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Costo</th>
                <th>Estado</th>
                <th>Acci√≥n</th>
                <th>Info</th>
            </tr>
        {{#each cursos_disponibles}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{descripcion}}</td>
                <td>{{costo}}</td>
                <td>{{estado}}</td>
